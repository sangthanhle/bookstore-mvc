@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Content/eshopper/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/eshopper/css/style.css" rel="stylesheet" />

    <title>Login</title>
</head>


<body>
    <section class="vh-100" style="background-image: url('../img/admin-bg.jpg')">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <h3 class="mb-2">ĐĂNG NHẬP HỆ THỐNG ADMIN</h3>
                            @*<p>Vui lòng nhập Tài khoản và mật khẩu !</p>*@
                            <p style="color:red; text-align:center">@ViewBag.Thongbao</p>
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="typeEmailX-2">Tài khoản</label>
                                    <input type="text" name="username" id="typeEmailX-2" class="form-control form-control-lg" />
                                    @ViewData["Loi1"]
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="typePasswordX-2">Mật khẩu</label>
                                    <input type="password" name="password" id="typePasswordX-2" class="form-control form-control-lg" />
                                    @ViewData["Loi2"]
                                </div>

                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-start mb-4">
                                    <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                                    <label class="form-check-label" for="form1Example3"> Nhớ mật khẩu </label>
                                </div>

                                <button type="submit" class="btn btn-primary btn-lg btn-block">Đăng nhập</button>
                            }
                            <hr class="my-4">

                            <button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;"
                                    type="submit">
                                <i class="fab fa-google me-2"></i> Sign in with google
                            </button>
                            <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;"
                                    type="submit">
                                <i class="fab fa-facebook-f me-2"></i>Sign in with facebook
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/eshopper/lib/easing/easing.min.js"></script>>
    <script src="~/Content/eshopper/lib/owlcarousel/owl.carousel.min.js"></script>
    <!-- Contact Javascript File -->
    <script src="~/Content/eshopper/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/Content/eshopper/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/Content/eshopper/js/main.js"></script>
</body>
</html>
